<Page
    x:Class="Toasts.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Toasts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Toast notifications" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" />
            
            <Button Content="Send standard toast" Click="OnSendStandardToastClicked" HorizontalAlignment="Center"
                    Margin="0, 19, 0, 0"/>
             
            <Button Content="Send toast with alarm" Click="OnSendToastWithAlarmClicked" HorizontalAlignment="Center"
                    Margin="0, 19, 0, 0"
                    />
            
            <Button Content="Send toast with background service" Click="OnSendToastWithBackgroundService" HorizontalAlignment="Center"
                    Margin="0, 19, 0, 0" />
        </StackPanel>
    </Grid>
</Page>
